{
  "apps": [{
    "name" : "personal-site",
    "script" : "serve",
    "env": {
      "PM2_SERVE_PATH": "public",
      "PM2_SERVE_PORT": 3001
    }
  }],
  "deploy" : {
    "production" : {
      "user" : "root",
      "host" : ["vps.jamesmiddleton.me"],
      "ref"  : "origin/master",
      "repo" : "https://github.com/james2mid/jamesmiddleton.me.git",
      "path" : "/var/production/personal-site",
      "pre-setup" : "apt-get install -y git",
      "post-deploy" : "npm install -y && pm2 startOrRestart ecosystem.json --env production"
    }
  }
}